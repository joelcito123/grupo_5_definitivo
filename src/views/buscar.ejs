<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head')%>
        <title>UrbanEats Jujuy</title>
        <link rel="stylesheet" href="/styles/search.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <%- include('./partials/header')%>
        <main>
            <h1 class="title">Resultado de: " <%= busqueda %>"</h1>
            <section class="contenedor-articulos">
                <% if(locals.productos) { %>
                    <% if(locals.errors) { %>
                        <% if(errors) { %>
                            <p> Buscar algo por favor </p>
                                <% } %>
                                    <% } else { %>
                                        <% productos.forEach(producto=> { %>
                                            <div class="contenedor-producto">
                                                <a href="/products/detail/<%= producto.id %>" class="enlace-producto">
                                                    <figure class="contenedor-imagen">
                                                        <img src="/images/products/<%= producto.image %>" class="imagen-producto"
                                                            alt="Imagen del producto" >
                                                    </figure>
                                                    <article class="contenedor-descripcion">
                                                        <p class="nombre">
                                                            <%= producto.name %>
                                                        </p>
                                                        <p class="precio">$<%= producto.price %>
                                                        </p>
                                                    </article>
                                                </a>
                                            </div>

                                            <% }) %>
                                                <% if(productos=="" ) { %>
                                                    <p>No se encontraron resultados</p>
                                                    <% } %>
                                                        <% } %>
                                                            <% } %>
            </section>
        </main>
        <%- include('./partials/footer')%>
</body>

</html>