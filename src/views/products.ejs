<!DOCTYPE html>
<html lang="es">

<head>
    <title>Listado de productos</title>
    <%- include('./partials/head') %>
        <link rel="stylesheet" href="/styles/productStyles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <%- include('./partials/header') %>

        <main>
            <h1 class="title">Todos los productos</h1>

            <section>

                <% products.forEach(producto=> { %>
                    <div class="product">
                        <a href="/products/detail/<%= producto.id %>">
                            <figure>
                                <img src="/images/products/<%= producto.image %>" alt="Imagen del producto">
                            </figure>
                            <article>
                                <p class="nombre">
                                    <%= producto.name %>
                                </p>
                                <p class="precio">$<%= producto.price %>
                                </p>
                            </article>
                        </a>
                    </div>

                <% }) %>

            </section>
        </main>

        <%- include('./partials/footer') %>
</body>

</html>