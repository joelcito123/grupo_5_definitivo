<!DOCTYPE html>
<html lang="es">
<head>
    <title>Listado de productos</title>
    <%- include('./partials/head') %>
</head>
<body>
    <%- include('./partials/header') %>

    <main>
        <h1>Todos los productos</h1>
        <section>
            <% productos.forEach(producto => { %>
                <a href="/products/detail/<%= producto.id %>">
                    <figure>
                        <img src="/images/products/<%= producto.image %>" alt="Imagen del producto">
                    </figure>
                    <article>
                        <p>$<%= producto.name %></p>
                        <p>$<%= producto.price %></p>
                    </article>
                </a>
            <% }) %>
        </section>
    </main>

    <%- include('./partials/footer') %>
</body>
</html>