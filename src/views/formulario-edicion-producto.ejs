<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head')%>
        <title>Formulario de edición</title>
        <link rel="stylesheet" href="/styles/formulario-edicion.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <%- include('./partials/header')%>
        <main>
            <form action="/products/<%=productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="form-padre">
                <h2 class="title">Formulario de edición de productos</h2>
                <p>Editando: <%= productToEdit.name %>
                </p>
                <div class="campo-formulario">
                    <div class="form-group">
                        <label for="name">Nombre:</label>
                        <input type="text" id="name" name="name" placeholder="Nombre del producto"
                            class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.name : null %>">
                        <% if(locals.errors && errors.name) { %>
                            <div class="text-danger">
                                <%= errors.name.msg %>
                            </div>
                            <% } %>
                                <span class="error-message1"></span>
                    </div>
                </div>
                <div class="campo-formulario">
                    <div class="form-group">
                        <label for="price">Precio:</label>
                        <input type="text" id="price" name="price" placeholder="Precio del producto"
                            class="form-control <%= locals.errors && errors.price ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.price : null %>">
                        <% if(locals.errors && errors.price) { %>
                            <div class="text-danger">
                                <%= errors.price.msg %>
                            </div>
                            <% } %>
                    </div>
                </div>
                <div class="campo-formulario">
                    <label for="category" class="form-label">Categoría:</label>
                    <div class="form-group">
                        <select name="category" id="category"
                            class="form-control <%= locals.errors && errors.category ? 'is-invalid' : null %>">
                            <option value="">Elegí</option>
                            <% let categorias=["Plato principal", "Desayuno" , "Postre" , "Bebidas" , "Combo" ] %>
                                <% for (let unaCategoria of categorias) { %>
                                    <option value="<%= unaCategoria %>" <%=locals.oldData &&
                                        (unaCategoria==oldData.category) ? "selected" : null %>
                                        > <%= unaCategoria %>
                                    </option>
                                    <% } %>
                        </select>
                        <% if(locals.errors && errors.category) { %>
                            <div class="text-danger">
                                <%= errors.category.msg %>
                            </div>
                            <% } %>
                    </div>
                </div>
                <div class="campo-formulario">
                    <div class="form-group">
                        <label for="description">Descripción:</label>
                        <textarea name="description" id="description"
                            class="form-control <%= locals.errors && errors.description ? 'is-invalid' : null %>"
                            placeholder="description"><%= locals.oldData ? oldData.description : null %></textarea>
                        </textarea>
                        <% if(locals.errors && errors.description) { %>
                            <div class="text-danger">
                                <%= errors.description.msg %>
                            </div>
                            <% } %>
                                <span class="error-message2"></span>
                    </div>
                </div>
                <div class="campo-formulario">
                    <div class="form-group">
                        <label for="image">Imagen:</label>
                        <input type="file" name="image" id="image"
                            class="form-control <%= locals.errors && errors.image ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.image : null %>">
                        <% if(locals.errors && errors.image) { %>
                            <div class="text-danger">
                                <%= errors.image.msg %>
                            </div>
                            <% } %>
                                <span class="error-image"></span> 
                    </div>
                </div>
                <div class="campo-formulario">
                    <div class="form-group">
                        <button type="submit" class="form-control btn-azul">Editar producto</button>
                    </div>     
                </div>
            </form>
        </main>
        <%- include('./partials/footer')%>
</body>
<script src="/js/validaciones.js"></script>

</html>