<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head')%>
        <title>Formulario de creacion</title>
        <link rel="stylesheet" href="/styles/formulario-creacion.css">
</head>

<body>
    <%- include('./partials/header')%>
        <main>
            <h2 class="title">Formulario de creación de productos</h2>
            <form action="/products" method="POST" enctype="multipart/form-data">
                <div>
                    <input type="text" id="name" name="name" placeholder="Nombre del producto" class="form-input">
                </div>
                <input type="text" id="price" name="price" placeholder="Precio del producto" class="form-input">
                <label for="category" class="form-label">Categoría:</label>
                <select name="category" id="category" class="form-input">
                    <% categories.forEach(category => { %>
                        <option value="<% category.id %>"><%= category.name %></option>
                    <% }) %>
                </select>
                <textarea name="description" id="description" class="form-input"
                    placeholder="Descripcion del producto"></textarea>
                <input type="file" name="image" id="image">
                <button type="submit">Guardar producto</button>
            </form>
        </main>
        <%- include('./partials/footer')%>
</body>

</html>