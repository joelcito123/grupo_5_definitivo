<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head')%>
    <title>UrbanEats Jujuy - Inicio de sesión</title>
    <link rel="stylesheet" href="/styles/loginStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <%- include('./partials/header')%>
    <main class="contenedor-formulario">
        <form action="/user/login" method="POST" class="form-padre">
            <h1>Iniciá Sesión</h1>
            <div class="row">
                <div class="col-md-6 my-2">
                    <div class="form-group">
                        <label for="email"><b>Correo electrónico:</b></label>
                        <input type="text" id="email" name="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>">
                        <% if (locals.errors && errors.email) { %>
                        <div class="text-danger">
                            <%= errors.email.msg %> 
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-6 my-2">
                    <div class="form-group">
                        <label for="password"><b>Password:</b></label>
                        <input type="password" id="password" name="hashed_password" class="form-control <%= locals.errors && errors.hashed_password ? 'is-invalid' : null %>">
                        <% if (locals.errors && errors.hashed_password) { %>
                        <div class="text-danger">
                            <%= errors.hashed_password.msg %> 
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-6 my-2">
                    <div class="form-group form-check">
                        <input type="checkbox" id="remember_user" class="form-check-input" name="remember_user">
                        <label for="remember_user" class="form-check-label">Recordar mi usuario</label>
                    </div>
                </div>
                <div class="col-12 my-3">
                    <button type="submit" class="form-control btn-login">Iniciar Sesión</button>
                </div>
            </div>
        </form>
    </main>
    <%- include('./partials/footer')%>
</body>

</html>