<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head')%>
        <title>UrbanEats Jujuy - Formulario de registro</title>
        <link rel="stylesheet" href="/styles/stylesRegister.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <%- include('./partials/header')%>
        <main class="contenedor-formulario">
            <form action="/user/register" method="POST" enctype="multipart/form-data" class="form-padre">
                <h1 class="title">Registrarse</h1>
                <div class="row">
                    <div class="col-md-6 my-1">
                        <div class="form-group">
                            <label for="first_name"><b>Nombre:</b></label>
                            <input type="text" id="first_name" name="first_name"
                                class="form-control <%= locals.errors && errors.first_name ? 'is-invalid' : null %>"
                                value="<%= locals.oldData ? oldData.first_name : null %>">
                            <% if (locals.errors && errors.first_name) { %>
                                <div class="text-danger">
                                    <%= errors.first_name.msg %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="col-md-6 my-1">
                        <div class="form-group">
                            <label for="last_name"><b>Apellido:</b></label>
                            <input type="text" id="last_name" name="last_name"
                                class="form-control <%= locals.errors && errors.last_name ? 'is-invalid' : null %>"
                                value="<%= locals.oldData ? oldData.last_name : null %>">
                            <% if (locals.errors && errors.last_name) { %>
                                <div class="text-danger">
                                    <%= errors.last_name.msg %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="col-md-6 my-1">
                        <div class="form-group">
                            <label for="email"><b>Correo electr√≥nico:</b></label>
                            <input type="email" id="email" name="email"
                                class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>"
                                value="<%= locals.oldData ? oldData.email : null %>">
                            <% if (locals.errors && errors.email) { %>
                                <div class="text-danger">
                                    <%= errors.email.msg %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="col-md-6 my-1">
                        <div class="form-group">
                            <label for="password"><b>Password:</b></label>
                            <input type="password" id="password" name="hashed_password"
                                class="form-control <%= locals.errors && errors.hashed_password ? 'is-invalid' : null %>">
                            <% if (locals.errors && errors.hashed_password) { %>
                                <div class="text-danger">
                                    <%= errors.hashed_password.msg %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="col-md-6 my-1" id="contenedor-campo">
                        <div class="form-group">
                            <label for="profile_image"><b>Imagen de perfil:</b></label>
                            <input type="file" id="profile_image" name="profile_image"
                                class="form-control <%= locals.errors && errors.profile_image ? 'is-invalid' : null %>">
                            <% if (locals.errors && errors.profile_image) { %>
                                <div class="text-danger">
                                    <%= errors.profile_image.msg %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="col-12 my-3">
                        <button type="submit" class="form-control btn-registrarse">Registrarse</button>
                    </div>
                </div>
            </form>
        </main>
        <%- include('./partials/footer')%>
</body>

</html>